<script>
    fetch('https://otruyenapi.com/v1/api/the-loai')
        .then(response => response.json())
        .then(data => {
            let items = data.data.items
            let dropdownMenu = document.querySelector('.dropdown-menu')
            dropdownMenu.innerHTML = '<button type="button" class="close-dropdown-btn"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="m16.192 6.344-4.243 4.242-4.242-4.242-1.414 1.414L10.535 12l-4.242 4.242 1.414 1.414 4.242-4.242 4.243 4.242 1.414-1.414L13.364 12l4.242-4.242z"></path></svg></button>'
            items.forEach(item => {
                dropdownMenu.innerHTML += `<span class="badge badge-pill badge-danger roboto-medium"><a href="/the-loai/${item.slug}?page=1">${item.name}</a></span>`
            })
        })
        .catch(err => console.log(err))
</script>